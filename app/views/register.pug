doctype html
html
    include ./partials/header.pug
    body.container
        include ./partials/navbar.pug
        form.form-container
            h2 Register
            .form-group
                label(for='username') Username
                input.form-control#username(type='text', placeholder='Username' required)
            .form-group
                label(for='email') Email
                input.form-control#email(type='text', placeholder='john@doe.com' required)
            .form-group
                label(for='password') Password
                input.form-control#password(type='password' required)
            .form-group
                label(for='confpassword') Confirm   
                input.form-control#confpassword(type='password' required)
            button.btn.btn-primary(type='submit') Register
            a.btn.btn-link(href='/') Cancel
